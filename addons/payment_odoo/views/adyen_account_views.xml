<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="adyen_account_form" model="ir.ui.view">
        <field name="name">adyen.account.form.inherit.payment.odoo</field>
        <field name="model">adyen.account</field>
        <field name="inherit_id" ref="odoo_payments.adyen_account_form"/>
        <field name="arch" type="xml">
            <group name="business_details" position="after">
                <group string="Payment Followup" attrs="{'invisible': [('id', '!=', False)]}">
                    <field name="payment_journal_id" context="{'default_type': 'bank'}"/>
                </group>
            </group>
        </field>
    </record>

</odoo>
