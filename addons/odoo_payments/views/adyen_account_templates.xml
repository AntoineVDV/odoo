<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="redirect_form">
        <form t-att-action="redirect_url" method="post">
            <input type="hidden" name="db_url" t-att-value="db_url"/>
            <input type="hidden" name="is_test" t-att-value="str(is_test)"/>
            <input type="hidden" name="return_url" t-att-value="return_url"/>
            <input type="hidden" name="adyen_data" t-att-value="adyen_data"/>
        </form>
    </template>

    <template id="account_status_change_message">
        <p t-if="reason"><t t-esc="reason"/>:</p>
        <ul>
            <li t-foreach="events" t-as="event">
                <t t-esc="event['reason']"/>
                <br/>
                Deadline: <t t-esc="event['executionDate']"/>
            </li>
        </ul>
    </template>

    <template id="kyc_status_message">
        <p t-if="message" t-esc="message"/>
        <t t-if="checks">
            <!-- FIXME ANVFE shouldn't it be one ul and X li nodes ? -->
            <ul t-foreach="checks" t-as="verification_type">
                <li>
                    <strong><t t-esc="verification_type"/>:</strong>
                    <ul>
                        <li t-foreach="checks[verification_type]" t-as="check">
                            <strong t-if="check['document']">
                                <t t-esc="check['document']"/>: </strong>
                            <t t-esc="check['message']"/>
                        </li>
                    </ul>
                </li>
            </ul>
        </t>
    </template>

</odoo>
